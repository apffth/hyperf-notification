{
    "name": "apffth/hyperf-notification",
    "description": "A notification system for Hyperf framework, compatible with Laravel notifications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "apffth",
            "email": "imtoogle@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "hyperf/framework": "~3.1.0",
        "hyperf/database": "~3.1.0",
        "hyperf/async-queue": "~3.1.0",
        "hyperf/event": "~3.1.0",
        "hyperf/redis": "~3.1.0",
        "hyperf/logger": "~3.1.0",
        "hyperf/utils": "~3.1.0",
        "hyperf/contract": "~3.1.0",
        "hyperf/amqp": "~3.1.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "hyperf/testing": "~3.1.0",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Hyperf\\Notification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hyperf\\Notification\\Tests\\": "tests/"
        }
    },
    "extra": {
        "hyperf": {
            "config": "config/notification.php"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 